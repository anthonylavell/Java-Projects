<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%date [%thread] [%-5level] %logger{40} - %message%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="challenges.amazon_challenge" level="DEBUG"/>-->
    <logger name="challenges.amazon_challenge" level="INFO"/>
   <!-- <logger name="challenges.amazon_challenge" level="TRACE"/>-->
    <!--<logger name="org.springframework" level="TRACE" />-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>